# QI Telecom Chatbot - Environment Configuration
# Copy this file to .env and update with your actual values

# Required: Google Sheets Configuration
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_API_KEY=your_google_api_key_here

# Optional: Server Configuration
PORT=8081
FORCE_HTTPS=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Optional: CORS Configuration (comma-separated list)
# For development, you can use http://localhost:8081
# For production, specify your actual domain(s)
ALLOWED_ORIGINS=http://localhost:8081,https://localhost:8081

# Optional: Security Limits
MAX_REQUEST_SIZE_BYTES=1048576
MAX_MESSAGE_LENGTH=1000
MAX_USER_ID_LENGTH=100
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=60s

# Optional: Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10

# Optional: Session Configuration
SESSION_TIMEOUT=1h
SECURE_COOKIES=false

# Optional: Redis Configuration
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# Optional: Database Configuration
# SQLite database file will be created automatically